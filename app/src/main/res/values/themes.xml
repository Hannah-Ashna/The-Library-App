<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LibraryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/devsoc_200</item>
        <item name="colorPrimaryVariant">@color/devsoc_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/devsoc_400</item>
        <item name="colorSecondaryVariant">@color/devsoc_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/devsoc</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LibraryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LibraryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="backgroundTint">@color/devsoc</item>
    </style>

    <style name="Theme.LibraryApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.LibraryApp.NavView" parent="ThemeOverlay.AppCompat.Light" />

</resources>