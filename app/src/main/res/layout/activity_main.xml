<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="342dp"
        android:adjustViewBounds="false"
        android:src="@drawable/brand_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/brand_logo" />

    <Button
        android:id="@+id/MainSignUpButton"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:onClick="signupButton"
        android:text="SIGN UP"
        app:layout_constraintEnd_toEndOf="@+id/MainLoginButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/MainLoginButton"
        app:layout_constraintTop_toBottomOf="@+id/MainLoginButton" />

    <Button
        android:id="@+id/MainLoginButton"
        android:layout_width="270dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:onClick="loginButton"
        android:text="LOGIN"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>