<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LibraryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_200</item>
        <item name="colorPrimaryVariant">@color/devsoc_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/gray_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_200</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/gray_200</item>

    </style>

    <style name="Theme.LibraryApp.ProgressBar">
        <item name="progressBarStyle">@color/white</item>
    </style>

    <style name="Theme.LibraryApp.AppBarOverlay">
        <item name="backgroundTint">@color/gray_200</item>
    </style>

    <style name="Theme.LibraryApp.NavView">
        <item name="colorPrimary">@color/mint</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/gray_200</item>
    </style>

</resources>